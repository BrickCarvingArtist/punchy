		border-radius 4px
		font-size h(13)
		color #999
		transition width .25s
		&.shrink
			width w(260)
		&.expand
			width w(295)
	.cancel
		color $blue
		font-size 0
		opacity 0
		transition font-size, opacity 0s .2s
		&.display
			font-size h(15)
			opacity 1
.search-addition
	position fixed
	top h(45)
	right 0
	bottom 0
	left 0
	background-color $bgGray
	&.hidden
		display none
	section
		margin-bottom h(10)
		display flex
		flex-direction column
		overflow hidden
		padding 0 w(15)
		background-color #fff
		h1
			display flex
			justify-content space-between
			align-items center
			margin h(15) 0 h(5)
			font-size h(13)
		a
			position relative
			line-height h(43)
			font-size h(13)
			color #666
			&:not(:last-of-type)
				&:after
					position absolute
					bottom 0
					left 0
					width w(360)
					height h(1)
					background-color $bdGray
					content ""
.search-result
	position fixed
	top h(45)
	right 0
	bottom 0
	left 0
	display flex
	flex-direction column
	align-items center
	padding 0 w(15)
	background-color #fff
	&.hidden
		display none
	a
		position relative
		width w(345)
		line-height h(43)
		font-size h(13)
		color #666
		&:after
			position absolute
			bottom 0
			left 0
			width w(360)
			height h(1)
			background-color $bdGray
			content ""
	> p.note
		line-height h(22)
		font-size h(13)
		color #999
	> icon.empty
		margin 50% 0 h(10)
		width w(80)
		height h(80)