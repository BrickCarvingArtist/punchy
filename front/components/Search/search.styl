@import "../../styles/mixin"
.search-header
	position fixed
	top 0
	display flex
	width w(375)
	height h(45)
	align-items center
	background-color #fff
	border-bottom 1px solid $bdGray
	.logo
		margin-left w(15)
		width w(67)
		height h(18)
		&.hidden
			display none
	input.search
		margin 0 w(15)
		height h(30)
		padding 0 w(10) 0 w(35)
		background-color #eee
		background-repeat no-repeat
		background-size w(18) h(18)
