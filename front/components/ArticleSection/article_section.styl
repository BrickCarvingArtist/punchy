@import "../../styles/mixin"
section.article
	margin-bottom h(10)
	width w(375)
	background-color #fff
	header
		display flex
		justify-content space-between
		align-items center
		height h(50)
		padding 0 w(15)
		.author
			display flex
			align-items center
		.avatar
			margin-right w(10)
			width w(20)
			height h(20)
			border-radius 50%
		strong
			font-size h(13)
			color #666
	.detail
		display block
		padding 0 w(15) h(15)
		// &.hasCover
		// 	position absolute
		// 	.cover
		// 		width w(375)
		// 		height h(100)
		// 	h1
		// 		margin-top h(10)
		h1
			margin-bottom h(10)
			font-size h(17)
			color #333
		p
			word-break break-all
			font-size h(15)
			line-height h(22)
			color #666
	footer
		display flex
		padding 0 w(15)
		justify-content space-between
		align-items center
		height h(43)
		time
			font-size h(13)
			color #999
		div.right
			display flex
			align-items center
			icon
				margin-left w(15)
			span
				margin-left w(5)
				font-zize h(13)
				color #bfd1e5