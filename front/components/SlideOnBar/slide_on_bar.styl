@import "../../styles/mixin"
.slide-on-bar
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	&.hidden
		display none
	.shadow
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		background-color transparentify(#000, .5)
	.bars
		position fixed
		bottom 0
		display flex
		flex-direction column
		width w(375)
	a
		display flex
		height h(45)
		justify-content center
		align-items center
		background-color #fff
		text-align center
		font-size h(15)
		color #333
		&:not(:last-of-type)
			border-bottom 1px solid #e3e3e3
		&:last-of-type
			border-top 4px solid #e3e3e3