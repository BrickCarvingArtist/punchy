@import "./mixin"
.me
	.profile
		display flex
		flex-direction column
		align-items center
		height h(160)
		background-image linear-gradient(55deg, #cbe1fe 0%, $blue 100%)
		.avatar
			margin h(40) 0 h(8)
			width w(60)
			height @width
			border-radius 50%
		strong
		a
			font-size h(15)
			color #fff
.container
	margin-top h(10)
	display flex
	flex-direction column
	background-color #fff
a
	&.entrance
		.medium
			margin-left w(15)
		label
			margin-left w(15)
			font-size h(15)
		span
			display inline-block
			margin-left w(190)
			width w(35)
			overflow hidden
			text-overflow ellipsis
			direction rtl
			font-size h(15)
			color #999
		.small
			margin-left w(5)