section.article
	margin-bottom h(10)
	background-color #fff
	header
		display flex
		align-items center
		height h(50)
		.avator
			margin 0 w(10) 0 w(15)
			width w(20)
			height h(20)
			border-radius 50%
		strong
			font-size h(20)
			color #666
	.detail
		position relative
		padding 0 w(15) h(15)
	.title
		&.hasCover
			position absolute
			.cover
				width w(375)
				height h(100)
			h1
				margin-top h(10)
		h1
			margin-bottom h(10)
			font-size h(17)
			color #333
	p
		font-size h(15)
		line-height h(22)
		color #666
	footer
		display flex
		padding 0 w(15)
		justify-content space-between
		align-items center
		height h(43)
		time
			font-size h(13)
			color #999
		div.view
			display flex
			align-items center
		span
			margin-left w(5)
			font-zize h(13)
			color #a9b9c9