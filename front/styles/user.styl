@import "./mixin"
.user-profile
	.profile
		height h(117)
		padding h(15) w(15)
		background-image linear-gradient(#b1d1fc -35%, #639efe 100%)
		.main
			margin-top h(10)
			display flex
			justify-content space-between
			align-items center
			.left
				display flex
			.center
				margin-left w(30)
				display flex
				flex-direction column
				justify-content center
				strong
					font-size h(17)
					color #fff
				p
					margin-top h(15)
				span
					font-size h(13)
					color #fff
					&:first-of-type
						margin-right w(20)
			a
				display flex
				justify-content center
				align-items center
				width w(60)
				height h(28)
				border 1px solid #fff
				border-radius 4px
				font-size h(15)
				color #fff
	>.article
		margin-top h(10)
		height h(520)